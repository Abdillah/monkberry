{
  "framework": "jasmine2",
  "src_files": [
    "monkberry.js",
    "spec/support/*.js",
    "spec/views.js",
    "spec/*.spec.js"
  ],
  "watch_files": [
    "lib/*.js",
    "lib/**/*.js",
    "bin/monkberry",
    "spec/views/*.html"
  ],
  "before_tests": "bin/monkberry --as-library --output spec/views.js -- spec/views/*.html spec/views/tag/*.html",
  "on_exit": "rm spec/views.js"
}
